namespace FastCopy
{
	enum FinishState
	{
		Success,
		Failed
	};

	interface ICopyBase requires Microsoft.UI.Xaml.Data.INotifyPropertyChanged
	{
		String OperationString{get; };
		Int32 ItemCount{get; };
		String Source{ get; };
		String Destination;

		Double Percent{ get; };
		void Start();
		void Pause();
		void Cancel();

		String SpeedText{ get; };
		event Windows.Foundation.EventHandler<FinishState> Finished;
	}
}
